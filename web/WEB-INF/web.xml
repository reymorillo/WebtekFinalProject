<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>drivername</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>connstr</param-name>
        <param-value>jdbc:mysql://localhost/community?user=root&amp;password=</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>my.listeners.StartupListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>GetImage</servlet-name>
        <servlet-class>my.servlets.GetImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveUser</servlet-name>
        <servlet-class>my.servlets.SaveUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>my.servlets.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>my.servlets.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>suspendStatus</servlet-name>
        <servlet-class>suspendStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Suspend</servlet-name>
        <servlet-class>Suspend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateSuspend</servlet-name>
        <servlet-class>my.servlets.updateSuspend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateAllow</servlet-name>
        <servlet-class>my.servlets.updateAllow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetImage</servlet-name>
        <url-pattern>/GetImage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveUser</servlet-name>
        <url-pattern>/SaveUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>suspendStatus</servlet-name>
        <url-pattern>/suspendStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Suspend</servlet-name>
        <url-pattern>/Suspend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateSuspend</servlet-name>
        <url-pattern>/updateSuspend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateAllow</servlet-name>
        <url-pattern>/updateAllow</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
